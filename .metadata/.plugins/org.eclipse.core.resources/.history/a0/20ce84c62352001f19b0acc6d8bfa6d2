package com.cg.controller;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.cg.entity.EducationLoan;
import com.cg.service.EducationService;

@RestController
@RequestMapping("education")
public class CustomerController {

	@Autowired
	private EducationService educationloanservice;
	
	 @PostMapping("/education")
	    public  EducationLoan applyForLoan(@RequestBody EducationLoan loanRequest) {
	        return educationloanservice.applyForLoan(loanRequest);
	    }
    @PostMapping("/home")
    public  EducationLoan applyForLoan(@RequestBody EducationLoan loanRequest) {
        return educationloanservice.applyForLoan(loanRequest);
    }

    @GetMapping("/personal")
    public Optional<EducationLoan> getLoansByCustomer(@PathVariable String panNo) {
        return educationloanservice.getLoansByCustomer(panNo);
    }2
}
